<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/free_response_bg">
  	<TextView android:text="Question" 
	  	  android:id="@+id/tvFreeResQuestion"
		  android:textSize="20dp"
		  android:textColor="#000000"
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content"
		  android:layout_marginTop="50dp"
	/>
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="200dp"
	  >	
	<TextView android:text="" 
	  	  android:id="@+id/tvPutAnswer"
		  android:textSize="20dp"
		  android:textColor="#000000"
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content"
		  android:layout_marginTop="60dp"
		  android:layout_marginLeft="10dp"
	/>
	<EditText android:text="" 
		android:id="@+id/etFreeResAnswer"
		android:layout_width="fill_parent" 
		android:layout_gravity="center_vertical"
		android:layout_marginTop="20dp"
		android:layout_height="120dp"
		android:hint="Type your answer here.">
    </EditText>
    </LinearLayout>
   	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	>    
   	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_weight="0.45"
	>
	   	<TextView android:text="" 
	  	  android:id="@+id/tvAnswerSubmitted"
		  android:textSize="15dp"
		  android:textColor="#0000ff"
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content"
		  android:layout_marginTop="44dp"
		  android:layout_marginLeft="10dp"
		/>
	 </LinearLayout>
	 <LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:orientation="horizontal"
	  android:gravity="center_vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_weight="0.55"
	  >
	    <Button
	        android:id="@+id/bSubmit"
	        android:background="@drawable/buttonfreeres"
	    	android:textSize="20dp"
	    	android:layout_width="100dp"
	    android:layout_height="104dp"/>
	    
	   	<TextView android:text="" 
	  	  android:id="@+id/tvShowTick"
		  android:textSize="30dp"
		  android:textColor="#ff0000"
		  android:layout_width="wrap_content" 
		  android:layout_height="wrap_content"
		/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>